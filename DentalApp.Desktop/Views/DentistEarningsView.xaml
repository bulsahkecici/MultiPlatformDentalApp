<UserControl x:Class="DentalApp.Desktop.Views.DentistEarningsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Kazançlarım" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Foreground="{StaticResource BulkaDarkBlue}"
                       FontWeight="Bold"
                       Margin="0,0,20,0"/>
            <Button Command="{Binding RefreshCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Foreground="{StaticResource BulkaMediumBlue}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Margin="0,0,5,0" Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="YENİLE" Foreground="{StaticResource BulkaMediumBlue}"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
            <materialDesign:Card Margin="10" Padding="20" Background="White">
                <StackPanel>
                    <materialDesign:PackIcon Kind="CurrencyUsd" 
                                           Width="48" 
                                           Height="48" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"
                                           Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:F2} TRY'}" 
                             Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Toplam Gelir" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="{StaticResource BulkaMediumBlue}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="10" Padding="20" Background="White">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Percent" 
                                           Width="48" 
                                           Height="48" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"
                                           Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="{Binding CommissionRate, StringFormat='{}{0:F1}%'}" 
                             Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Komisyon Oranı" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="{StaticResource BulkaMediumBlue}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="10" Padding="20" Background="White">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Cash" 
                                           Width="48" 
                                           Height="48" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"
                                           Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="{Binding TotalEarnings, StringFormat='{}{0:F2} TRY'}" 
                             Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Toplam Kazanç" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="{StaticResource BulkaMediumBlue}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="10" Padding="20" Background="White">
                <StackPanel>
                    <materialDesign:PackIcon Kind="MedicalBag" 
                                           Width="48" 
                                           Height="48" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,10"
                                           Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="{Binding TreatmentCount}" 
                             Style="{StaticResource MaterialDesignHeadline2TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Toplam Tedavi" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="{StaticResource BulkaMediumBlue}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>

        <materialDesign:Card Grid.Row="2" Padding="20" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Tedavi Detayları" 
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                           Foreground="{StaticResource BulkaDarkBlue}"
                           Margin="0,0,0,15"/>

                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding Treatments}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Tarih" Binding="{Binding TreatmentDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="100"/>
                        <DataGridTextColumn Header="Hasta" Binding="{Binding PatientFullName}" Width="200"/>
                        <DataGridTextColumn Header="Tedavi Türü" Binding="{Binding TreatmentType}" Width="*"/>
                        <DataGridTextColumn Header="Gelir" Binding="{Binding Cost, StringFormat='{}{0:F2} TRY'}" Width="120"/>
                        <DataGridTextColumn Header="Kazanç" Binding="{Binding Earnings, StringFormat='{}{0:F2} TRY'}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <ProgressBar Grid.Row="2" 
                     Style="{StaticResource MaterialDesignCircularProgressBar}" 
                     IsIndeterminate="True" 
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="60" 
                     Height="60"/>
    </Grid>
</UserControl>
