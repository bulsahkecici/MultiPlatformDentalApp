<UserControl x:Class="DentalApp.Desktop.Views.DentistEarningsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Kazançlarım" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       Foreground="{StaticResource BulkaDarkBlue}"
                       FontWeight="Bold"
                       Margin="0,0,20,0"/>
            <Button Command="{Binding RefreshCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Foreground="{StaticResource BulkaMediumBlue}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Margin="0,0,5,0" Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="YENİLE" Foreground="{StaticResource BulkaMediumBlue}"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- 3 Kart: Ciro, Ödenen Ciro Payı, Toplam Kazanç -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,20">
            <materialDesign:Card Margin="10" Padding="30" Background="White">
                <StackPanel>
                    <materialDesign:PackIcon Kind="CurrencyUsd" 
                                           Width="56" 
                                           Height="56" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"
                                           Foreground="{StaticResource BulkaMediumBlue}"/>
                    <TextBlock Text="{Binding TotalTurnover, StringFormat='{}{0:N2} TRY'}" 
                             Style="{StaticResource MaterialDesignHeadline3TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"/>
                    <TextBlock Text="Ciro" 
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                             Foreground="{StaticResource BulkaMediumBlue}"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="Toplam yaptığı işlerin maliyeti" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="10" Padding="30" Background="White">
                <StackPanel>
                    <materialDesign:PackIcon Kind="CashCheck" 
                                           Width="56" 
                                           Height="56" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"
                                           Foreground="{StaticResource BulkaLightGreen}"/>
                    <TextBlock Text="{Binding PaidTurnoverShare, StringFormat='{}{0:N2} TRY'}" 
                             Style="{StaticResource MaterialDesignHeadline3TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"/>
                    <TextBlock Text="Ödenen Ciro Payı" 
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                             Foreground="{StaticResource BulkaMediumBlue}"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CommissionRate, StringFormat='Ciro Payı: {0:F1}%'}" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Margin="10" Padding="30" Background="{StaticResource BulkaLightBlue}">
                <StackPanel>
                    <materialDesign:PackIcon Kind="TrendingUp" 
                                           Width="56" 
                                           Height="56" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"
                                           Foreground="{StaticResource BulkaDarkBlue}"/>
                    <TextBlock Text="{Binding TotalEarnings, StringFormat='{}{0:N2} TRY'}" 
                             Style="{StaticResource MaterialDesignHeadline3TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"/>
                    <TextBlock Text="Toplam Kazanç" 
                             Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding Salary, StringFormat='Maaş: {0:N2} TRY'}" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="{StaticResource BulkaDarkBlue}"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Margin="0,5,0,0"/>
                    <TextBlock Text="Maaş + Ödenen Ciro Payı" 
                             Style="{StaticResource MaterialDesignBody2TextBlock}" 
                             Foreground="Gray"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>

        <ProgressBar Grid.Row="2" 
                     Style="{StaticResource MaterialDesignCircularProgressBar}" 
                     IsIndeterminate="True" 
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     Width="60" 
                     Height="60"/>
    </Grid>
</UserControl>