<UserControl x:Class="DentalApp.Desktop.Views.PatientManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Hasta Yönetimi" 
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                   Foreground="{StaticResource BulkaDarkBlue}"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                     materialDesign:HintAssist.Hint="Hasta ara..." 
                     Width="300" 
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,20,0"/>
            
            <Button materialDesign:ButtonAssist.CornerRadius="5" 
                    Command="{Binding RefreshCommand}" 
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Margin="0,0,5,0"/>
                    <TextBlock Text="YENİLE"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding AddPatientCommand}"
                    Margin="0,0,10,0"
                    Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Margin="0,0,5,0"/>
                    <TextBlock Text="HASTA EKLE"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding EditPatientCommand}"
                    Margin="0,0,10,0"
                    Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Edit" Margin="0,0,5,0"/>
                    <TextBlock Text="DÜZENLE"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeletePatientCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Visibility="{Binding CanEdit, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Delete" Margin="0,0,5,0"/>
                    <TextBlock Text="SİL"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:Card Grid.Column="0" VerticalAlignment="Stretch">
                <DataGrid ItemsSource="{Binding Patients}" 
                          SelectedItem="{Binding SelectedPatient}"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ad" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Soyad" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="E-posta" Binding="{Binding Email}" Width="*"/>
                        <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="*"/>
                        <DataGridTextColumn Header="Şehir" Binding="{Binding City}" Width="*"/>
                        <DataGridTextColumn Header="Oluşturulma" Binding="{Binding CreatedAt, StringFormat=d}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>
            
            <materialDesign:Card Grid.Column="2" Padding="15" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Hasta Detayları" 
                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                 Foreground="{StaticResource BulkaDarkBlue}"
                                 FontWeight="Bold"
                                 Margin="0,0,0,15"
                                 Visibility="{Binding SelectedPatient, Converter={StaticResource NullToBooleanConverter}}"/>
                        
                        <TextBlock Text="Hasta seçin" 
                                 Style="{StaticResource MaterialDesignBody1TextBlock}"
                                 Foreground="Gray"
                                 Margin="0,20,0,0"
                                 Visibility="{Binding SelectedPatient, Converter={StaticResource InverseBooleanConverter}}"/>
                        
                        <!-- Hasta Bilgileri -->
                        <Expander Header="Hasta Bilgileri" 
                                IsExpanded="True"
                                Margin="0,0,0,10"
                                Visibility="{Binding SelectedPatient, Converter={StaticResource NullToBooleanConverter}}">
                            <StackPanel Margin="10,10,0,10">
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Ad Soyad: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.FullName}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="E-posta: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.Email}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Telefon: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.Phone}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Adres: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.Address}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Şehir: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.City}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Ülke: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.Country}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Doğum Tarihi: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.DateOfBirth, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Cinsiyet: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.Gender}"/>
                                </TextBlock>
                                <TextBlock Margin="0,5,0,5">
                                    <Run Text="Kan Grubu: " FontWeight="Bold"/>
                                    <Run Text="{Binding SelectedPatient.BloodType}"/>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Geçmiş Randevular -->
                        <Expander Header="Geçmiş Randevular" 
                                IsExpanded="True"
                                Margin="0,0,0,10"
                                Visibility="{Binding SelectedPatient, Converter={StaticResource NullToBooleanConverter}}">
                            <DataGrid ItemsSource="{Binding PatientAppointments}"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    IsReadOnly="True"
                                    MaxHeight="200"
                                    Margin="10,10,0,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tarih" Binding="{Binding AppointmentDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="*"/>
                                    <DataGridTextColumn Header="Saat" Binding="{Binding StartTime, StringFormat='{}{0:hh\\:mm}'}" Width="Auto"/>
                                    <DataGridTextColumn Header="Durum" Binding="{Binding Status}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>
                        
                        <!-- Yapılan Tedaviler -->
                        <Expander Header="Yapılan Tedaviler" 
                                IsExpanded="True"
                                Margin="0,0,0,10"
                                Visibility="{Binding SelectedPatient, Converter={StaticResource NullToBooleanConverter}}">
                            <DataGrid ItemsSource="{Binding PatientTreatments}"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    IsReadOnly="True"
                                    MaxHeight="200"
                                    Margin="10,10,0,10">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tarih" Binding="{Binding TreatmentDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="*"/>
                                    <DataGridTextColumn Header="Tedavi Türü" Binding="{Binding TreatmentType}" Width="*"/>
                                    <DataGridTextColumn Header="Durum" Binding="{Binding Status}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Command="{Binding PreviousPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,10,0">
                <materialDesign:PackIcon Kind="ChevronLeft"/>
            </Button>
            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" Margin="10,0"/>
            <Button Command="{Binding NextPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="10,0,0,0">
                <materialDesign:PackIcon Kind="ChevronRight"/>
            </Button>
        </StackPanel>

        <ProgressBar Grid.Row="2" Style="{StaticResource MaterialDesignCircularProgressBar}" 
                     IsIndeterminate="True" 
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                     HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
    </Grid>
</UserControl>
