<UserControl x:Class="DentalApp.Desktop.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource BulkaGradientBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Üst Başlık -->
            <TextBlock Text="BULKA DENTAL – Diş Kliniği Yönetim Sistemi" 
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"
                       Foreground="{StaticResource BulkaDarkBlue}"
                       FontWeight="Bold"/>
            
            <!-- Banner/Alt Başlık -->
            <TextBlock Text="BULKA DENTAL – Diş Kliniği Yönetim Sistemi" 
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"
                       Foreground="{StaticResource BulkaMediumBlue}"/>
            
            <materialDesign:Card Width="500" Padding="50" UniformCornerRadius="10" 
                             Background="White">
                <StackPanel>
                    <!-- Logo -->
                    <Image Source="pack://application:,,,/DentalApp.Desktop;component/Assets/bulka dental logo.png" 
                           Width="150" 
                           Height="150"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"
                           Stretch="Uniform"/>
                    
                    <TextBlock Text="BULKA DENTAL" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,5"
                               Foreground="{StaticResource BulkaDarkBlue}"
                               FontWeight="Bold"/>
                    <TextBlock Text="Kullanıcı Girişi" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               Foreground="{StaticResource BulkaMediumBlue}"/>
                    
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             materialDesign:HintAssist.Hint="Kullanıcı Adı / E-posta" 
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             FontSize="16"
                             Height="50"
                             Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,15" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="PasswordBox" 
                                     Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Şifre" 
                                     Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                     FontSize="16"
                                     Height="50"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                        <TextBox x:Name="PasswordTextBox"
                                 Grid.Column="0"
                                 materialDesign:HintAssist.Hint="Şifre"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 FontSize="16"
                                 Height="50"
                                 Visibility="Collapsed"
                                 TextChanged="PasswordTextBox_TextChanged"/>
                        <Button x:Name="TogglePasswordButton"
                                Grid.Column="1"
                                Style="{StaticResource MaterialDesignIconButton}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Width="40"
                                Height="40"
                                Click="TogglePasswordButton_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <materialDesign:PackIcon x:Name="PasswordIcon" 
                                                    Kind="Eye" 
                                                    Width="20" 
                                                    Height="20"/>
                        </Button>
                    </Grid>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               Margin="0,5,0,15"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               MaxWidth="450"/>
                    
                    <Button Content="GİRİŞ" 
                            Command="{Binding LoginCommand}" 
                            IsDefault="True"
                            Margin="0,0,0,0"
                            Height="50"
                            FontSize="16"
                            FontWeight="Bold"
                            Padding="20,0"
                            Background="{StaticResource BulkaMediumBlue}"
                            Foreground="White"
                            BorderThickness="0"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="{Binding IsBusy}"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding IsBusy}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="{StaticResource BulkaMediumBlue}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource BulkaDarkBlue}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</UserControl>
