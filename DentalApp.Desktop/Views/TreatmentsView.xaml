<UserControl x:Class="DentalApp.Desktop.Views.TreatmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tedavi Yönetimi" 
                   Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                   Foreground="{StaticResource BulkaDarkBlue}"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox ItemsSource="{Binding Patients}"
                     SelectedValuePath="Id"
                     SelectedValue="{Binding SelectedPatientId}"
                     DisplayMemberPath="FullName"
                     materialDesign:HintAssist.Hint="Hastaya Göre Filtrele"
                     Width="200"
                     Margin="0,0,20,0"/>

            <DatePicker SelectedDate="{Binding StartDate}" 
                       materialDesign:HintAssist.Hint="Başlangıç Tarihi"
                       Language="tr-TR"
                       Margin="0,0,20,0"
                       Width="150"/>

            <DatePicker SelectedDate="{Binding EndDate}" 
                       materialDesign:HintAssist.Hint="Bitiş Tarihi"
                       Language="tr-TR"
                       Margin="0,0,20,0"
                       Width="150"/>

            <Button Command="{Binding ClearFiltersCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,20,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FilterRemove" Margin="0,0,5,0"/>
                    <TextBlock Text="TEMİZLE"/>
                </StackPanel>
            </Button>
            
            <Button materialDesign:ButtonAssist.CornerRadius="5" 
                    Command="{Binding RefreshCommand}" 
                    Margin="0,0,10,0"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Margin="0,0,5,0"/>
                    <TextBlock Text="YENİLE"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding AddTreatmentCommand}"
                    Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" Margin="0,0,5,0"/>
                    <TextBlock Text="TEDAVİ EKLE"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding EditTreatmentCommand}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Edit" Margin="0,0,5,0"/>
                    <TextBlock Text="DÜZENLE"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <materialDesign:Card Grid.Row="2" VerticalAlignment="Stretch">
            <TreeView ItemsSource="{Binding PatientGroups}" 
                      BorderThickness="0"
                      SelectedItemChanged="TreeView_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Treatments}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" 
                                                    Width="20" 
                                                    Height="20" 
                                                    Margin="0,0,10,0"
                                                    Foreground="{StaticResource BulkaMediumBlue}"/>
                            <TextBlock Text="{Binding PatientName}" 
                                     FontWeight="Bold"
                                     FontSize="14"
                                     Foreground="{StaticResource BulkaDarkBlue}"/>
                            <TextBlock Text="{Binding Treatments.Count, StringFormat='({0} tedavi)'}" 
                                     Margin="10,0,0,0"
                                     Foreground="{StaticResource BulkaMediumBlue}"
                                     FontSize="12"/>
                        </StackPanel>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource BulkaLightBlue}" 
                                      BorderThickness="0,0,0,1" 
                                      Padding="5"
                                      MouseDown="TreatmentItem_MouseDown">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding TreatmentDate, StringFormat=d}" 
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" 
                                                 Text="{Binding TreatmentType}" 
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                                        <TextBlock Grid.Column="2" 
                                                 Text="{Binding ToothNumber}" 
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                                        <TextBlock Grid.Column="3" 
                                                 Text="{Binding Cost, StringFormat=C}" 
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                                        <TextBlock Grid.Column="4" 
                                                 Text="{Binding Status, Converter={StaticResource StatusToTurkishConverter}}" 
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </materialDesign:Card>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Command="{Binding PreviousPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,0,10,0">
                <materialDesign:PackIcon Kind="ChevronLeft"/>
            </Button>
            <TextBlock Text="{Binding PageInfo}" VerticalAlignment="Center" Margin="10,0"/>
            <Button Command="{Binding NextPageCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="10,0,0,0">
                <materialDesign:PackIcon Kind="ChevronRight"/>
            </Button>
        </StackPanel>

        <ProgressBar Grid.Row="2" Style="{StaticResource MaterialDesignCircularProgressBar}" 
                     IsIndeterminate="True" 
                     Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                     HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="60"/>
    </Grid>
</UserControl>
